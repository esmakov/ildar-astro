---
import Video from "../components/Video.astro";
import MySiteLayout from "../layouts/MySiteLayout.astro";

const weddingFilenames = [
  ["Mikhail and Sophie", "output_playlist_1.m3u8", "MikhailSophie.png"],
  ["Johan and Lana", "output_playlist_2.m3u8", "JohanLana.png"],
  ["David and Cassandra", "output_playlist_3.m3u8", "DavidCassandra.png"],
  // ["Allen and Nadia", "output_playlist_4.m3u8", "AllenNadia.png"],
];

const commercialFilenames = [["Londontown", "output_playlist_5.m3u8"]];
---

<MySiteLayout>
  <link rel="stylesheet" href="https://vjs.zencdn.net/7.10.2/video-js.css" />
  <script src="https://vjs.zencdn.net/7.10.2/video.min.js"></script>

  <h2 class="text-xl md:text-3xl font-medium text-center mt-4 md:mt-6">
    Wedding Video
  </h2>
  <div class="flex flex-col gap-4 bg-gradient-to-b from-slate-100 to-slate-300">
    {
      weddingFilenames.map(([title, filename, poster], idx) => (
        <div class="mx-8 md:mx-32 flex flex-col">
          <div class="text-xl md:text-2xl mx-auto my-2">{title}</div>
          <Video filename={filename} id={idx} poster={poster} />
        </div>
      ))
    }
    <!-- <div class="h-screen bg-slate-100">
      <h2 class="text-xl md:text-3xl font-medium text-center mt-4 md:mt-6">
        Commercial Video
      </h2>
    </div> -->
  </div>
</MySiteLayout>
